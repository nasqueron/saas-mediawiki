{
  "exclude": [
    "(^vendor/)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "php": {
      "type": "php",
      "include": "(\\.php$)"
    },
    "phpcs": {
      "type": "phpcs",
      "bin": "vendor/bin/phpcs",
      "phpcs.standard": "PSR1",
      "include": [
	    "(^index\\.php$)",
	    "(^LocalSettings\\.php$)",
        "(^src/.*\\.php$)",
        "(^config/.*\\.php$)",
        "(^bin/.*\\.php$)",
        "(^views/.*\\.php$)"
      ]
    },
    "spelling": {
      "type": "spelling"
    }
  }
}
